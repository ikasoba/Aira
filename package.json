{
  "name": "aira",
  "version": "1.0.0",
  "description": "Discord Bot",
  "type": "module",
  "scripts": {
    "start": "node ./build/index.js",
    "dev": "npx tsx ./src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npx esbuild ./src/index.ts --target=node18.7 --bundle --format=esm --platform=node --packages=external --outfile=./build/index.js",
    "format": "prettier --write \"src/**/*.{js,ts,md}\"",
    "check": "npx tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Netetra/Aira.git"
  },
  "author": "Netetra",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Netetra/Aira/issues"
  },
  "homepage": "https://github.com/Netetra/Aira#readme",
  "dependencies": {
    "discord.js": "^14.7.1",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "esbuild": "^0.17.4",
    "eslint": "^8.32.0",
    "prettier": "^2.8.3",
    "tsx": "^3.12.2",
    "typescript": "^4.9.4"
  }
}
